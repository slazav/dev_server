#!/bin/bash -efu

. ../modules/test_lib.sh

# use non-standard port to avoid collisions with running server
port=8182

# try to stop the server
./dev_server --stop --port $port --pidfile pid.tmp &>/dev/null ||:

assert_cmd "wget localhost:$port/b/ask/text -nv -S"\
  "failed: Connection refused." 4

rm -f log.txt

# run the server
assert_cmd "./dev_server --port $port --pidfile pid.tmp --config test_data/n2.txt --logfile log.txt --dofork" "" 0

a=$(wget localhost:$port/x/ask/text -O - -nv -S 2>&1 | grep Error ||:)
assert_cmd "echo $a" "Error: unknown device: x" 0


a=$(wget localhost:$port/b/x/text -O - -nv -S 2>&1 | grep Error ||:)
assert_cmd "echo $a" "Error: unknown action: x" 0

a=$(wget localhost:$port/b/ask/text -O - -q ||:)
assert_cmd "echo $a" "text" 0

a=$(wget localhost:$port/SERVER/log_level/3 -O - -q ||:)
assert_cmd "echo $a" "3" 0
a=$(wget localhost:$port/SERVER/log_level -O - -q ||:)
assert_cmd "echo $a" "3" 0

a=$(wget localhost:$port/SERVER/devices -O - -q ||:)
assert_cmd "echo $a" "a b" 0
a=$(wget localhost:$port/SERVER/list -O - -q ||:)
assert_cmd "echo $a" "a b" 0
a=$(wget localhost:$port/SERVER/info/a -O - -q ||:)
assert_cmd "echo $a" "Device: a Driver: test Device is closed Number of users: 0" 0

a=$(wget localhost:$port/SERVER/repeat/text -O - -q ||:)
assert_cmd "echo $a" "text" 0
a=$(wget localhost:$port/b/ask/text -O - -q ||:)
assert_cmd "echo $a" "text" 0

a=$(wget localhost:$port/SERVER/release/b -O - -q ||:)
assert_cmd "echo $a" "" 0
a=$(wget localhost:$port/SERVER/use/a -O - -q ||:)
assert_cmd "echo $a" "" 0
a=$(wget localhost:$port/SERVER/log_level/1 -O - -q ||:)
assert_cmd "echo $a" "1" 0

# stop the server
assert_cmd "./dev_server --port $port --stop --pidfile pid.tmp" "" 0
assert_diff test_data/log1.txt log.txt
