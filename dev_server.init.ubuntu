#!/bin/sh
# Start/stop the cron daemon.
#
### BEGIN INIT INFO
# Provides:          dev_server
# Required-Start:    $syslog
# Required-Stop:     $syslog
# Default-Start:     2 3 4 5
# Default-Stop:
# Short-Description: dev_server: HTTP server for accessing devices
# Description:       dev_server: HTTP server for accessing devices
### END INIT INFO

PATH=/bin:/usr/bin:/sbin:/usr/sbin
DESC="dev_server: HTTP server for accessing devices"
NAME=dev_server

PORT=8082
PIDFILE=/var/run/dev_server.pid
CONFFILE=/etc/dev_server.cfg

DAEMON=/usr/bin/dev_server
DAEMON_OPTS="-d -p $PORT -C $CONFFILE -P $PIDFILE"
SCRIPTNAME=/etc/init.d/"$NAME"

test -f $DAEMON || exit 0

. /lib/lsb/init-functions

case "$1" in
start)	log_daemon_msg "Starting $DESC" "$NAME"
        rm -f -- $PIDFILE
        start-stop-daemon --start --quiet --pidfile $PIDFILE \
                          --exec $DAEMON -- $DAEMON_OPTS
        log_end_msg $?
	;;
stop)	log_daemon_msg "Stopping $DESC" "$NAME"
        start-stop-daemon --stop --quiet --pidfile $PIDFILE \
                          --retry 300 \
                          --exec $DAEMON
        RETVAL=$?
        [ $RETVAL -eq 0 ] && [ -e "$PIDFILE" ] && rm -f $PIDFILE
        log_end_msg $RETVAL
        ;;
restart) log_daemon_msg "Restarting $DESC" "$NAME"
        $0 stop
        $0 start
        ;;
reload|force-reload) log_daemon_msg "Reloading configuration files for $DESC" "$NAME"
	# $NAME reloads automatically
        log_end_msg 0
        ;;
status)
        status_of_proc -p $PIDFILE $DAEMON $NAME && exit 0 || exit $?
        ;;
*)	log_action_msg "Usage: $SCRIPTNAME {start|stop|status|restart|reload|force-reload}"
        exit 2
        ;;
esac
exit 0
